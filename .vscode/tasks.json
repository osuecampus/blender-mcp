{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start MCP Server",
            "type": "shell",
            "command": "uvx blender-mcp",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Check Blender Connection",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python ${workspaceFolder}/check_blender.py",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Open Blender",
            "type": "shell",
            "command": "flatpak run org.blender.Blender &",
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Full Setup: Open Blender + Start MCP",
            "dependsOrder": "sequence",
            "dependsOn": ["Open Blender"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
