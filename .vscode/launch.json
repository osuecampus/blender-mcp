{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "blender_mcp.server",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Test Copilot Bridge",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_connection.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
